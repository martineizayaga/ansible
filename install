#!/usr/bin/env zsh

if [[ -z $STOW_FOLDERS ]]; then
  STOW_FOLDERS="nvim,zsh"
fi

if [[ -z $DOTFILES ]]; then
  DOTFILES=$HOME/Dropbox/.dotfiles
fi

pushd $DOTFILES
for folder in $(echo $STOW_FOLDERS | sed "s/,/ /g")
do
  echo $folder
  stow --delete $folder
  stow --target="$HOME" $folder
done
popd
